{
  "name": "split-pay-checkout",
  "version": "1.0.0",
  "description": "Shopify app for splitting payments across multiple credit/debit cards",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "dev": "node --watch server/index.js",
    "migrate": "node scripts/migrate.js",
